<%= form_for @patient, html: {id: "new-patient-form"} do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	<br>
	<%= f.label :second_name %>
	<%= f.text_field :second_name %>
	<br>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br>
	<%= f.label :password %>
	<%= f.text_field :password %>
	<br>
	<%= f.label :password_confirmation %>
	<%= f.text_field :password_confirmation %>
	<br>
	<%= f.submit 'Sign-Up!' %>
<% end %>